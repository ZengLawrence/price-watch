{
  "name": "Price Watch",
  "description": "Extension to record prices of products on Amazon",
  "version": "0.3.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "price-info.html",
    "default_icon": "hello_extensions.png"
  },
  "content_scripts": [
    {
      "js": ["content.js"],
      "matches": ["https://www.amazon.com/*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "permissions": ["storage"]
}
